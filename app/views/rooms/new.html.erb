<%= page_title("Nova sala para #{ @movie_theater.name }") %>
<%= form_with(model: [@movie_theater, @room]) do |f| %>
  <div class="mb-6">
    <%= f.label :name, class: 'form-label' %>
    <%= f.text_field :name, class: 'form-field' %>
  </div>
  <div class="mb-6">
    <%= f.label :capacity, class: 'form-label' %>
    <%= f.text_field :capacity, class: 'form-field' %>
  </div>
  <%= f.submit 'Criar Sala', class: 'btn-confirm' %>
<% end %>

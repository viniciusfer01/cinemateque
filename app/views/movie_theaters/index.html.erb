<%= page_title(t('.title'))%>
<div class="my-5">
  <%= button_link 'Adicionar Cinema', new_movie_theater_path %>
</div>
<table id="movie-theaters-table" class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
  <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
    <th scope="col" class="px-3 py-3">Nome</th>
    <th scope="col" class="px-6 py-3">Cidade</th>
  </thead>
  <tbody>
    <% @movie_theaters.each do |mt| %>
      <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
        <td class="px-3 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
          <%= link_to mt.name, mt, class: "text-blue-600 dark:text-blue-500 hover:underline" %>
        </td>
        <td class="px-6 py-4">
          <%= mt.city %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
